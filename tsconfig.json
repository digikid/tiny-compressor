{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "es2020",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": "src",
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
